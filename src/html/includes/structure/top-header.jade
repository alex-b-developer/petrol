nav.navbar.navbar-default.my-topheader
  .container-fluid
    // Brand and toggle get grouped for better mobile display
    .navbar-header
      a.navbar-brand(href='#') 
      button.navbar-toggle.collapsed.my-sidebar-toggle(type='button', data-toggle='collapse', data-target='#my-main-sidebar-container')
        span.sr-only Toggle navigation
        span(class="#{conf.sidebarIconPrefix} #{conf.sidebarIconPrefix}-menu")
    // Collect the nav links, forms, and other content for toggling
    #my-topheader-collapse       
      ul.nav.navbar-nav.navbar-right.my-avatar-nav        
        include /includes/structure/top-header/profile-dropdown.jade
      ul.nav.navbar-nav.navbar-right.my-not-nav
        include /includes/structure/top-header/alerts-dropdown.jade
        include /includes/structure/top-header/messages-dropdown.jade
        include /includes/structure/top-header/settings-dropdown.jade
    // /.navbar-collapse
  // /.container-fluid
