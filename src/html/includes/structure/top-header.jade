nav.navbar.navbar-default.pe-topheader
  .container-fluid

    .navbar-header
      a.navbar-brand(href='#') 
      button.navbar-toggle.collapsed.pe-sidebar-toggle(type='button', data-toggle='collapse', data-target='#pe-main-sidebar-container')
        span.sr-only Toggle navigation
        span(class="#{conf.sidebarIconPrefix} #{conf.sidebarIconPrefix}-menu")

    .pe-topheader-collapse       
      ul.nav.navbar-nav.navbar-right.pe-avatar-nav        
        include /includes/structure/top-header/profile-dropdown.jade
      ul.nav.navbar-nav.navbar-right.pe-icon-nav
        include /includes/structure/top-header/search.jade
        include /includes/structure/top-header/alerts-dropdown.jade
        include /includes/structure/top-header/messages-dropdown.jade

    include /includes/structure/top-header/search-component.jade